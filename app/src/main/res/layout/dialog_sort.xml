<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="@string/dialog_sort_field_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="viewStart"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_size_normal"
        android:paddingStart="@dimen/dialog_text_padding"
        android:paddingEnd="@dimen/dialog_text_padding"
        android:paddingTop="@dimen/dialog_text_padding"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/spinner_sort_primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:entries="@array/pref_sort_field_titles"
            android:prompt="@string/pref_title_sort_field"
            android:padding="@dimen/card_padding"
            android:layout_toStartOf="@+id/image_button_1" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_button_1"
            android:src="@drawable/ic_action_sort_ascending"
            android:background="?android:selectableItemBackgroundBorderless"
            android:layout_gravity="end"
            android:padding="@dimen/sort_dialog_button_padding"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="@dimen/sort_dialog_button_margin_end"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:focusable="true"
            android:backgroundTint="@color/colorPrimary"/>

    </RelativeLayout>

