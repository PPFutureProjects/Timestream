<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="First by&#8230;"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="viewStart"
        android:textColor="@color/colorAccent"
        android:paddingStart="@dimen/dialog_text_padding"
        android:paddingTop="@dimen/dialog_text_padding"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/spinner_sort_primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/pref_sort_first_titles"
            android:prompt="@string/pref_title_sort_first"
            android:padding="@dimen/card_padding"
            android:layout_toStartOf="@+id/image_button_1" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_button_1"
            android:src="@drawable/ic_action_sort_ascending"
            android:background="@null"
            android:layout_gravity="end"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="@dimen/dialog_button_padding"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:focusable="true"
            android:backgroundTint="@color/colorPrimary"/>

    </RelativeLayout>

    <TextView
        android:text="then by&#8230;"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="viewStart"
        android:textColor="@color/colorAccent"
        android:paddingStart="@dimen/dialog_text_padding"
        android:paddingTop="12dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinner_sort_secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/pref_sort_first_titles"
            android:prompt="@string/pref_title_sort_first"
            android:padding="@dimen/card_padding"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/image_button_2" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_button_2"
            android:src="@drawable/ic_action_sort_descending"
            android:background="@null"
            android:layout_gravity="end"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="@dimen/dialog_button_padding"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:focusable="true"/>

    </RelativeLayout>

</LinearLayout>